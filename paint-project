<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.3/p5.js"></script>
    
    <script> var r,g,b,c;
        function setup() {
            createCanvas(800,600);
            background(200)
            r=255;
            g=255;
            b=255;
            c=70;
        }

        //color and clear boxes
        function draw() {
            stroke(0)
            fill(255,0,0) //red
            rect(50,500,50,50)
            
            fill(0,255,0) //green
            rect(150,500,50,50)
            
            fill(0,0,255) //blue
            rect(250,500,50,50)
            
            fill(0) //black
            rect(350,500,50,50)
            
            fill(255) //white
            rect(450,500,50,50)
            
            
            fill(0,0) //clear button
            rect(700,500,50,50)
            
            if(keyIsPressed && keyCode == 82){
                r++

            }

        }
    


        //baisc color picker
        function mousePressed(){
            if(mouseX>50 && mouseX<100 && mouseY>500 && mouseY<550){
                r=255
                g=0
                b=0
             }else if(mouseX>150 && mouseX<200 && mouseY>500 && mouseY<550){
                 r=0
                 g=255
                 b=0
             }else if(mouseX>250 && mouseX<300 && mouseY>500 && mouseY<550){
                 r=0
                 g=0
                 b=255
             }else if(mouseX>350 && mouseX<400 && mouseY>500 && mouseY<550){
                 r=0
                 g=0
                 b=0
             }else if(mouseX>450 && mouseX<500 && mouseY>500 && mouseY<550){
                 r=255
                 g=255
                 b=255
             }else if(mouseX>700 && mouseX<750 && mouseY>500 && mouseY<550){
                 background(200)
             }
             
            // stroke(r,g,b)
            // fill(r,g,b)
            // ellipse(mouseX,mouseY,c,c)
        }
        
        //to paint/draw
        function mouseDragged(){
            stroke(r,g,b)
            fill(r,g,b)
            ellipse(mouseX,mouseY,c,c)
        }
        
        //size
        function keyPressed(){
            if(keyCode == 66){
                c++
            } else if(keyCode == 83){
                c--
            } else{
                c=70
            }
            c=constrain(c,1,300)

        }
    </script>
</head>

<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/jaszmynh4085/p5js/blob/master/paint-project.html?footer=0"></script>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas0').remove());
        });
    </script>
</body>

